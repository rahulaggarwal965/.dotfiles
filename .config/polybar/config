[colors]
background = #E6121212
background-wm = ${xrdb:color8}
background-alt = #E6121212
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color7}
primary = #FF8700
alert = ${xrdb:color1}

[settings]
format-background =${colors.background-alt}
format-padding = 0
format-margin = 0

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/bar]
monitor = ${env:MONITOR:}
monitor-fallback =
monitor-strict = false
monitor-exact = true
override-redirect = false
wm-restack = bspwm
enable-ipc = true
fixed-center = true
bottom = false
separator =

width = 100%
height = 32
offset-x = 0
offset-y = 0
radius = 0.0

background = ${colors.background}
foreground = ${colors.foreground}

module-margin = 2

font-0 = SF Pro Display:style=Semibold:size=10;1
font-1 = FontAwesome5Free:style=Solid:size=9;1
font-2 = Material Design Icons:size=12;1
font-3 = Noto Sans Mono Nerd Font:size=10;1

modules-left = bspwm spotify
modules-center = date
modules-right = wifinetwork networktraffic sep bluetooth pulseaudio battery power

cursor-click = pointer
cursor-scroll = default

[module/bspwm]
type = internal/bspwm

enable-scroll = true
label-focused = %name%
label-focused-background = ${colors.primary}
label-focused-foreground = ${colors.background}
label-focused-underline = ${colors.primary}
label-focused-padding = 2

label-occupied = %name%
label-occupied-padding = 2

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty =

format-padding =
scroll-up = next
scroll-down = prev

[module/spotify]
type = custom/script
format-prefix = "  "
tail = true
label = "%output%"
label-maxlen = 40
exec = playerctl -p spotify -F metadata -f "{{ artist }} - {{ title }}" 2>/dev/null
click-left = playerctl -p spotify previous &
click-right = playerctl -p spotify next &
click-middle = playerctl -p spotify play-pause &
scroll-up = spotifyvolume +2%
scroll-down = spotifyvolume -2%

[module/date]
type = internal/date
interval = 60
date-alt = %a, %b %d
date = %a, %b %d
time = %I:%M %p
time-alt = %I:%M:%S %p
label = "%date%  %time%"

[module/sep]
type = custom/text
content = "|"
content-foreground = ${colors.primary}
content-font = 0

[module/wifinetwork]
type = internal/network
interface = wlp0s20f3
interval = 60.0
accumulate-stats = true
unknown-as-up = false
format-connected = <ramp-signal> <label-connected>
format-connected-padding = 0
label-connected = "  %essid%"
label-disconnected = "󰤯"
ramp-signal-0 = "󰤟"
ramp-signal-1 = "󰤢"
ramp-signal-2 = "󰤨"
ramp-signal-3 = "󰤨"

[module/bluetooth]
type = custom/script
tail = true
label ="%output%"
exec = bluetoothstatus
click-left = rofi -show bluetooth -theme menu
click-right = bluetooth toggle
click-middle = $TERMINAL -e bluetoothctl

[module/pulseaudio]
type = internal/pulseaudio
interval = 2
use-ui-max = true
format-volume = <ramp-volume> <label-volume>
label-volume = "%percentage%%"
label-muted =   muted
ramp-volume-0 = " "
ramp-volume-1 = " "
ramp-volume-2 = " "
click-right = $TERMINAL -e pulsemixer

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

ramp-capacity-font = 4

format-charging = <ramp-capacity>   <label-charging>
format-discharging = <ramp-capacity>   <label-discharging>
format-low = <ramp-capacity>  <label-low>
format-full = <ramp-capacity>   <label-full>

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/power]
type = custom/text
content = ⏻
content-padding = 1
content-foreground = ${colors.background}
content-background = ${colors.primary}
click-left = power-dmenu

