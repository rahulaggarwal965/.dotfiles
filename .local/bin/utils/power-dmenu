#!/bin/sh

select=$(printf "^Lock\n⏾^Suspend\n^Logout\n^Reboot\n⏻^Shutdown" | column -s'^' -t -R2 | rofi -dmenu -theme powermenu -i -hover-select -me-select-entry '' -me-accept-entry MousePrimary)
case "$select" in
    *"Lock")     betterlockscreen -l ;;
    *"Suspend")  systemctl suspend ;;
    *"Logout")   bspc quit ;;
    *"Reboot")   systemctl reboot ;;
    *"Shutdown") systemctl poweroff ;;
esac
