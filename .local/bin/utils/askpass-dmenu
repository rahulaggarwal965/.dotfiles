#!/bin/sh

current_monitor=$(bspc query -M -m --names)
echo "cmd:hide.spotify" > "/tmp/bar-$current_monitor"

num_active_desktops=$(bspc query -D -d .occupied -m .focused | wc -l)

N="$num_active_desktops" rofi -dmenu \
    -input /dev/null \
    -password \
    -i \
    -p "Password: " \
    -theme askpass \

echo "cmd:show.spotify" > "/tmp/bar-$current_monitor"
